{
  "id": null,
  "uid": "system-dashboard",
  "title": "Bootc Dashboard System Monitoring",
  "tags": ["system", "monitoring"],
  "style": "dark",
  "timezone": "browser",
  "panels": [
    {
      "id": 1,
      "title": "System Uptime",
      "type": "stat",
      "targets": [
        {
          "expr": "time() - node_boot_time_seconds",
          "legendFormat": "Uptime",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        }
      },
      "gridPos": {
        "h": 6,
        "w": 8,
        "x": 0,
        "y": 0
      }
    },
    {
      "id": 2,
      "title": "CPU Usage",
      "type": "stat",
      "targets": [
        {
          "expr": "100 - (avg by (instance) (rate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
          "legendFormat": "CPU Usage %",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent"
        }
      },
      "gridPos": {
        "h": 6,
        "w": 8,
        "x": 8,
        "y": 0
      }
    },
    {
      "id": 3,
      "title": "Memory Usage",
      "type": "stat",
      "targets": [
        {
          "expr": "(node_memory_MemTotal_bytes - node_memory_MemAvailable_bytes) / node_memory_MemTotal_bytes * 100",
          "legendFormat": "Memory Usage %",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent"
        }
      },
      "gridPos": {
        "h": 6,
        "w": 8,
        "x": 16,
        "y": 0
      }
    },
    {
      "id": 4,
      "title": "Disk Usage by Partition",
      "type": "timeseries",
      "targets": [
        {
          "expr": "(node_filesystem_size_bytes{fstype!~\"tmpfs|fuse.lxcfs|squashfs|overlay\",mountpoint!~\"/boot.*|/run.*|/sys.*|/proc.*|/dev.*|/var/lib/docker.*|/var/lib/containers.*\"} - node_filesystem_free_bytes{fstype!~\"tmpfs|fuse.lxcfs|squashfs|overlay\",mountpoint!~\"/boot.*|/run.*|/sys.*|/proc.*|/dev.*|/var/lib/docker.*|/var/lib/containers.*\"}) / node_filesystem_size_bytes{fstype!~\"tmpfs|fuse.lxcfs|squashfs|overlay\",mountpoint!~\"/boot.*|/run.*|/sys.*|/proc.*|/dev.*|/var/lib/docker.*|/var/lib/containers.*\"} * 100",
          "legendFormat": "{{mountpoint}} ({{device}})",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100
        }
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 6
      }
    },
    {
      "id": 5,
      "title": "Disk Free Space",
      "type": "stat",
      "targets": [
        {
          "expr": "node_filesystem_free_bytes{fstype!~\"tmpfs|fuse.lxcfs|squashfs|overlay\",mountpoint!~\"/boot.*|/run.*|/sys.*|/proc.*|/dev.*|/var/lib/docker.*|/var/lib/containers.*\"}",
          "legendFormat": "{{mountpoint}} ({{device}})",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes"
        }
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 6
      }
    },
    {
      "id": 6,
      "title": "Prometheus Status",
      "type": "stat",
      "targets": [
        {
          "expr": "up{job=\"prometheus\"}",
          "legendFormat": "Prometheus Up",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "mappings": [
            {
              "options": {
                "0": {
                  "text": "DOWN",
                  "color": "red"
                },
                "1": {
                  "text": "UP",
                  "color": "green"
                }
              },
              "type": "value"
            }
          ]
        }
      },
      "gridPos": {
        "h": 6,
        "w": 6,
        "x": 0,
        "y": 14
      }
    },
    {
      "id": 7,
      "title": "Prometheus Targets",
      "type": "stat",
      "targets": [
        {
          "expr": "prometheus_tsdb_symbol_table_size_bytes",
          "legendFormat": "TSDB Size",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes"
        }
      },
      "gridPos": {
        "h": 6,
        "w": 6,
        "x": 6,
        "y": 14
      }
    },
    {
      "id": 8,
      "title": "Grafana Status",
      "type": "stat",
      "targets": [
        {
          "expr": "up{job=\"grafana\"}",
          "legendFormat": "Grafana Up",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "mappings": [
            {
              "options": {
                "0": {
                  "text": "DOWN",
                  "color": "red"
                },
                "1": {
                  "text": "UP",
                  "color": "green"
                }
              },
              "type": "value"
            }
          ]
        }
      },
      "gridPos": {
        "h": 6,
        "w": 6,
        "x": 12,
        "y": 14
      }
    },
    {
      "id": 9,
      "title": "Grafana Active Sessions",
      "type": "stat",
      "targets": [
        {
          "expr": "grafana_stat_totals_dashboard",
          "legendFormat": "Dashboards",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short"
        }
      },
      "gridPos": {
        "h": 6,
        "w": 6,
        "x": 18,
        "y": 14
      }
    },
    {
      "id": 10,
      "title": "Container Memory Usage vs Limits",
      "type": "timeseries",
      "targets": [
        {
          "expr": "container_memory_usage_bytes{name=~\"prometheus|grafana|node-exporter\"}",
          "legendFormat": "{{name}} - Used",
          "refId": "A"
        },
        {
          "expr": "container_spec_memory_limit_bytes{name=~\"prometheus|grafana|node-exporter\"}",
          "legendFormat": "{{name}} - Limit",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes"
        }
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 20
      }
    },
    {
      "id": 11,
      "title": "Container CPU Usage",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(container_cpu_usage_seconds_total{name=~\"prometheus|grafana|node-exporter\"}[5m]) * 100",
          "legendFormat": "{{name}} CPU %",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent"
        }
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 20
      }
    },
    {
      "id": 12,
      "title": "Container Status",
      "type": "stat",
      "targets": [
        {
          "expr": "container_last_seen{name=~\"prometheus|grafana|node-exporter\"}",
          "legendFormat": "{{name}} Last Seen",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "dateTimeAsIso"
        }
      },
      "gridPos": {
        "h": 6,
        "w": 8,
        "x": 0,
        "y": 28
      }
    },
    {
      "id": 13,
      "title": "Network I/O",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(node_network_receive_bytes_total[5m])",
          "legendFormat": "{{device}} - RX",
          "refId": "A"
        },
        {
          "expr": "rate(node_network_transmit_bytes_total[5m])",
          "legendFormat": "{{device}} - TX",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "Bps"
        }
      },
      "gridPos": {
        "h": 6,
        "w": 8,
        "x": 8,
        "y": 28
      }
    },
    {
      "id": 14,
      "title": "Load Average",
      "type": "timeseries",
      "targets": [
        {
          "expr": "node_load1",
          "legendFormat": "Load 1m",
          "refId": "A"
        },
        {
          "expr": "node_load5",
          "legendFormat": "Load 5m",
          "refId": "B"
        },
        {
          "expr": "node_load15",
          "legendFormat": "Load 15m",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short"
        }
      },
      "gridPos": {
        "h": 6,
        "w": 8,
        "x": 16,
        "y": 28
      }
    },
    {
      "id": 15,
      "title": "Disk I/O Rate",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(node_disk_read_bytes_total[5m])",
          "legendFormat": "{{device}} - Read",
          "refId": "A"
        },
        {
          "expr": "rate(node_disk_written_bytes_total[5m])",
          "legendFormat": "{{device}} - Write",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "Bps"
        }
      },
      "gridPos": {
        "h": 6,
        "w": 12,
        "x": 0,
        "y": 34
      }
    },
    {
      "id": 16,
      "title": "Disk Usage Summary",
      "type": "stat",
      "targets": [
        {
          "expr": "(node_filesystem_size_bytes{fstype!~\"tmpfs|fuse.lxcfs|squashfs|overlay\",mountpoint=\"/\"} - node_filesystem_free_bytes{fstype!~\"tmpfs|fuse.lxcfs|squashfs|overlay\",mountpoint=\"/\"}) / node_filesystem_size_bytes{fstype!~\"tmpfs|fuse.lxcfs|squashfs|overlay\",mountpoint=\"/\"} * 100",
          "legendFormat": "Root Filesystem Usage",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 75
              },
              {
                "color": "red",
                "value": 90
              }
            ]
          }
        }
      },
      "gridPos": {
        "h": 6,
        "w": 12,
        "x": 12,
        "y": 34
      }
    }
  ],
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "refresh": "5s"
}
